name:                opengl-implicit4
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/opengl-implicit4#readme
license:             GPL-3
author:              Stéphane Laurent
maintainer:          laurent_step@yahoo.fr
copyright:           2018 Stéphane Laurent
category:            Graphics
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

flag exe
  description: build the executables
  default:     False

library
  hs-source-dirs:      src
  exposed-modules:     MarchingCubes.Voxel
                     , MarchingCubes.ComputeContour3d
                     , MarchingCubes.OpenGL
                     , MarchingCubes.Utils.Triangles
                     , MarchingCubes
                     , Utils.OpenGL
                     , Goursat
                     , Bretzel5
                     , Bretzel5Colored
                     , Bretzel5Smooth
                     , Orthocircle
                     , OrthocircleSmooth
                     , Utils.Palettes
                     , GoursatColored
                     , Decocube
                     , DecocubeSmooth
                     , BanchoffChmutov
                     , KusnerSchmitt
                     , SuperEllipsoid
                     , Pretzel
                     , KleinBottle
                     , Valentine
                     , Utils.ConvertPPM
                     , Spikes
                     , Spikes2D
                     , Utils.Misc
                     , Spiral
                     , WonderTree
                     , Pilz
                     , CubeOctahedron
                     , Cyclide
  build-depends:       base >= 4.7 && < 5
                     , OpenGL
                     , GLUT
                     , split
                     , extra
                     , numeric-tools
                     , vector
                     , containers
                     , polynomial
                     , gl-capture
                     , bytestring
                     , hip
                     , directory
  default-language:    Haskell2010
  other-extensions:    ForeignFunctionInterface
  include-dirs:        C
  C-sources:           C/utils.c
                     , C/tables.c
                     , C/marchingCubes.c
  ghc-options:         -Wall

-- executable testmc
--   hs-source-dirs:      src-exe
--   main-is:             Main.hs
--   build-depends:       base >= 4.7 && < 5
--                      , opengl-implicit4
--   default-language:    Haskell2010

executable goursat
  if flag(exe)
    buildable: True
  else
    buildable: False
  hs-source-dirs:      src-exe
  main-is:             ExeGoursat.hs
  ghc-options:         -fllvm -main-is ExeGoursat
  build-depends:       base >= 4.7 && < 5
                     , opengl-implicit4
  default-language:    Haskell2010

